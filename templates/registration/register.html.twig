{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <div class="card shadow rounded-4 border-0">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Create Your Account</h2>

                        {{ form_errors(form) }}

                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.userDetail.name) }}
                            {{ form_widget(form.userDetail.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userDetail.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.user.email) }}
                            {{ form_widget(form.user.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.user.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.userDetail.address) }}
                            {{ form_widget(form.userDetail.address, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userDetail.address) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.userDetail.phoneNumber) }}
                            {{ form_widget(form.userDetail.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.userDetail.phoneNumber) }}
                        </div>

                        <div class="mb-3 position-relative">
                            {{ form_label(form.user.plainPassword.first) }}
                            <div class="input-group">
                                {{ form_widget(form.user.plainPassword.first, {'attr': {
                                    'class': 'form-control',
                                    'type': 'password'
                                }}) }}
                                <span class="input-group-text">
                                    <i class="fa-solid fa-eye togglePassword"></i>
                                </span>
                            </div>
                            {{ form_errors(form.user.plainPassword.first) }}
                        </div>

                        <div class="mb-3 position-relative">
                            {{ form_label(form.user.plainPassword.second) }}
                            <div class="input-group">
                                {{ form_widget(form.user.plainPassword.second, {'attr': {
                                    'class': 'form-control',
                                    'type': 'password'
                                }}) }}
                                <span class="input-group-text">
                                    <i class="fa-solid fa-eye togglePassword"></i>
                                </span>
                            </div>
                            {{ form_errors(form.user.plainPassword.second) }}
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(form.user.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.user.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.user.agreeTerms) }}
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block rounded-pill">Register</button>
                        </div>
                        {{ form_end(form) }}

                        <p class="text-center mt-3">
                            Already have an account?
                            <a href="{{ path('app_login') }}">Login here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



